<h3><strong>Retaurant's name: </strong><%= @restaurant.name %></h3>

<ul>
  <li><%= @restaurant.address %></li>
  <li><%= @restaurant.phone_number %></li>
  <li><%= @restaurant.category %></li>
</ul>

<h5>Reviews</h5>

<% @restaurant.reviews.each do |review| %>
  <ul>
    <li><%= review.content %></li>
    <li> <%= review.rating %></li>
  </ul>
<% end %>

<h5><%= link_to "Create a review", new_restaurant_review_path(@restaurant) %></h5>
