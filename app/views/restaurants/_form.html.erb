<%= simple_form_for @restaurant do |f| %>
  <div class="form-group">
    <%= f.label :name, "Enter restaurant's name" %><br>
    <%= f.text_field :name, class: 'form-control' %>

    <%= f.label :address, "Enter restaurant's address" %><br>
    <%= f.text_field :address, class: 'form-control' %>

    <%= f.label :phone_number, "Enter restaurant's phone_number" %><br>
    <%= f.text_field :phone_number, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :category, "Select restaurant's category" %><br>
    <%= f.select :category, ["chinese", "italian", "japanese", "french", "belgian"] %>
  </div>

  <div class="form-group">
    <%= f.submit "Submit a new restaurant", class: "btn btn-primary" %>
  </div>

<% end %>

<%= link_to "Back to Restaurants", restaurants_path %>
